{
  "compilerOptions": {
    "incremental": true,
    "skipLibCheck": true,
    "target": "es2017",
    "lib": ["esnext", "dom"],
    "outDir": "dist",
    "rootDir": "src",
    "rootDirs": ["src", "temp/sass-ts"],
    "module": "esnext",
    "esModuleInterop": true,
    "moduleResolution": "node",
    "composite": true,
    "declaration": true,
    "declarationMap": true,
    "removeComments": true,
    "inlineSources": true,
    "sourceMap": true,

    "noImplicitAny": true,
    "strictNullChecks": true,
    "noImplicitThis": true,
    "noImplicitReturns": true,

    "resolveJsonModule": true,
    "jsx": "react",
    "plugins": [],
    "types": []
  },
  "compileOnSave": false,
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"]
  // // comment this in to see a broken build as an example of the problem described here:
  // // https://github.com/microsoft/rushstack/issues/2604#issuecomment-818996848
  // "references": [{ "path": "./src/subproj" }]
}
